<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.anilosman.com.alarnsheduler.AlarmDetailActivity">

    <TextView
        android:id="@+id/alarmNameDetail"
        android:text="@string/alarm_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_margin"
        android:textSize="@dimen/medium_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/alarmTimeDetail"
        android:text="10:22 PM"
        android:textSize="@dimen/medium_text"
        android:layout_margin="@dimen/medium_margin"
        android:layout_below="@+id/alarmNameDetail"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/alarmDateDetail"
        android:text="Created: 10:00 PM"
        android:textSize="@dimen/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarmTimeDetail"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/deleteButton"
        android:layout_below="@id/alarmDateDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/delete"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
